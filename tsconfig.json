{
  "compilerOptions": {
    "paths": {
      "api:test": ["./api/test/runner.ts"],
      "api:router": ["./api/router/index.ts"]
    },
    // add Bun type definitions
    "types": ["bun-types"],

    // enable latest features
    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",

    // if TS 5.x+
    "noEmit": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",

    // best practices
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
